{
  "name": "projeto-api-podcasts",
  "version": "1.0.0",
  "description": "API de Podcasts: Fornece dados sobre podcasts, com filtros por nome e categoria. Ideal para aplicativos de streaming.",
  "main": "server.js",
  "scripts": {
    "dist": "tsup src",
    "start:dev": "tsx --env-file=.env src/server.ts",
    "start:watch": "tsx watch --env-file=.env  src/server.ts",
    "start:dist": "npm run dist && node --env-file=.env dist/server.js"
  },
  "keywords": [],
